#auth_consoles
  #overview
    %div{:id => "detailed", :class => "tab_panel"}
      =form_tag '/authentication_console/delete', :method => :delete, :name => 'auth_console_form' do
        %h3 Added Consoles
        .stepInfo
          %table{:class => "list"}
            %thead{:class => "list-table-header"}
              %th{:class => "checkbox"}
                = check_box_tag "all_auth_consoles", 1, false, {:class => "master_checkbox"}
              %th Host
              %th Port
              %th Name
              %th Description
            - @auth_consoles.each do |console|
              %tr{:class => "#{cycle('odd', 'even')}"}
                %td
                  = check_box_tag("nexpose_console_ids[]", console.id, false, {:class => 'child_checkbox'})
                %td
                  = link_to(h(console.host), 'asdf')
                %td
                  = console.port
                %td
                  = console.name
                %td
                  = console.description
        %div{:class => "stepLead", :style => "width: 100%;"} 
          .step
            .btnRow
              %div{:class => "btn"}
                = link_to "Add a new Authentication Console", '/authentication_console/new', :class => "new"

