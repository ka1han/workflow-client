= f.fields_for :ticketing_scope do |scope_data|
  %fieldset{:style => 'width:auto;'}
    - if not @ticket_config.scope_id
      - first = true
      - TicketingScope.all.each do |scope|
        =radio_button_tag 'ticket_config[scope_id]', scope.id, first, {}
        %b
          = scope.name
        %p
          = scope.description
        %br
        - if first == true then first = false end
    - else
      - TicketingScope.all.each do |scope|
        - current_scope = (@ticket_config.scope_id == scope.id)
        =radio_button_tag 'ticket_config[scope_id', scope.id, current_scope, {}
        %b
          = scope.name
        %p
          = scope.description
        %br

