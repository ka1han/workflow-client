<% if smb_shares.length > 0 %>
<% host_record ||= false %>
<% if host_record %>
<h3>Exposed SMB Shares</h3>
<% end %>
<table class="list" id="shares_smb">
	<% if not host_record %>
		<caption>Exposed SMB Shares</caption>
	<% end %>
	<thead>
		<tr>
			<th>Share Name</th>
			<th>Share Type</th>
			<th>Description</th>
			<th>Information</th>
		</tr>
	</thead>
	<tbody>
	<% smb_shares.each do |si| %>
		<% si.data[:shares].each do |s| %>
			<tr class="<%=h row_cycle %>">
				<td><%= link_to "\\\\#{h si.host.address}\\#{h s[0]}", "smb://#{si.host.address}/#{s[0]}" %></td>
				<td><%=h s[1] %></td>
				<td><%=h s[2] %></td>
				<td><%=h s[3].to_s %></td>
			</tr>
		<% end %>
	<% end %>
	</tbody>
</table>

<% end %>
